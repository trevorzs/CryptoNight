 body, h1, div, ul{
   margin: 0;
   font-family: 'Ropa Sans', sans-serif;
   padding:0;
 }

 div{
   overflow:scroll;
 }

 *:focus {
    outline: 0 !important;
}

 a{
   text-decoration: none;
   margin:0;
   color:white;
 }
