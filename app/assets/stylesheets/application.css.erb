 /*
 green highlight: #00ea9c
 purple highlight: #e72ebe
 dark blue background : #030e21;
  */
 body, h1, div, ul{
   margin: 0;
   font-family: 'Ropa Sans', sans-serif;
   padding:0;
 }


 *:focus {
    outline: 0 !important;
}
 a{
   text-decoration: none;
   margin:0;
   color:white;
 }
 /* a:hover{
     color:#e72ebe;
} */


 .fullsize{
   height:100%;
   width:100%;
 }

 .halfsize{
   height:100%;
   width:50%;
 }

#root{
  height:100%;
  width:100%;
  position:fixed;
}
.main{
  background-color:#151515;
  color:white;
  margin: 0;
}

.overall {

  /* box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.01), 0 3px 24px rgba(48, 51, 51, 0.09); */
   /* box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.01), 0 3px 24px rgba(0, 0, 0, 0.6);
    filter: drop-shadow(0px 0px 12px 3px #cea774);
    color: #00ea9c; */

      background-color: #030e21;
      height:100%;
      width:100%;
      position:fixed;
     /* color: #cbcbcd; */
}



.login-left{
  background-image:url('<%= asset_path("login_image.png") %>');
  background-size:cover;
  background-position:center;
  min-width: 518px;
}

.login-right{
  display:flex;
  justify-content: center;
  flex-direction: column;
  align-items: flex-start;
  background-color:#151515;
  color:white;
}

.login-main{
  display:flex;
}


.splash{
  width:100%;
  height:100%;
  background-image:url('<%= asset_path("splash.gif") %>');
  background-size:cover;
  background-position: center;
}

.splash-title{
  position:absolute;
  font-size:120px;
  top:25%;
  left:30%;
}

.splash-navbar{
  display:flex;
  justify-content: space-between;
  margin: 0 100px;
}

.scroll{
  overflow:hidden;
}

.scroll::-webkit-scrollbar{
  display:none;
}

.scroll:hover{
  overflow:scroll;
}

.displace{
  position: fixed;
  bottom:0;
  top:64px;
  left:0;
  height:100%;
  width:100%;
}


.gradient{
  background: linear-gradient(to right top, #c817d7, #ed33b8);
  /* background: linear-gradient(to right top, #00dd8c, #03f0a0); */
  opacity:0.2;
  height:100%;
  width:100%;
  -webkit-mask-image: linear-gradient(to top, #000, transparent);
}

.gradient-up{
  /* background: linear-gradient(to right top, #c817d7, #ed33b8); */
  background: linear-gradient(to right top, #00dd8c, #03f0a0);
  opacity:0.2;
  height:100%;
  width:100%;
  -webkit-mask-image: linear-gradient(to top, #000, transparent);
}

.logo{
  margin-left:60px;
  margin-top:4px;
  background-image:url('<%= asset_path("cosmonaut3.png") %>');
  width:50px;
  height:32px;
  background-size:contain;
  background-repeat:no-repeat;
}



.user-show-main {
  position:relative;
  display:flex;
  justify-content: flex-start;
  flex-direction: column;
  margin: 103px 150px 0 0;
  width:600px;
}


.user-show-main h1{
  font-size: 36px;
  font-weight: 500;
  letter-spacing: 1.5px;
  line-height: 42px;
}


.user-show-button{
  margin: 50px 20px;
  font-size:20px;
  width:150px;
}

.user-show-button:hover{
  color: #e72ebe;
}

.stock-show-main {
  position:relative;
  display:flex;
  justify-content: flex-start;
  flex-direction: column;
  margin: 103px 0 0 0;
}


.stock-show-main h1{
  font-size: 36px;
  font-weight: 500;
  letter-spacing: 1.5px;
  line-height: 42px;
}



.tooltip{
  color:lightgrey;

}

@font-face {
    font-family: IdlewildBold;
    src: url('<%= asset_path("idlewild-bold.woff") %>') format("woff"), url('<%= asset_path("idlewild-bold.ttf") %>')  format("truetype");
}

@font-face {
    font-family: IdlewildThin;
    src: url('<%= asset_path("idlewild-thin.woff") %>') format("woff"), url('<%= asset_path("idlewild-thin.ttf") %>')  format("truetype");
}


.main-wrapper{
  display:flex;
  justify-content: center;
}

.filler{
  width:100%;
  height:100px;
}


.user-show-name{
  margin-left:20px;
  margin-top:10px;
  letter-spacing:1.5px;
}
