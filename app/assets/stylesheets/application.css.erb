 body, h1, div{
   margin: 0;
   font-family: 'Ropa Sans', sans-serif;
   padding:0;
 }
 a{
   text-decoration: none;
   margin:0;
 }

 .fullsize{
   height:100%;
   width:100%;
 }

 .halfsize{
   height:100%;
   width:50%;
 }

#root{
  height:100%;
  width:100%;
  position:fixed;
}
.main{
  background-color:#151515;
  color:white;
  margin: 0;
}
.login-main{
  display:flex;
}

.login-left{
  background-image:url('<%= asset_path("login_image.png") %>');
  background-size:cover;
  background-position:center;
  min-width: 518px;
}

.login-right{
  display:flex;
  justify-content: center;
  flex-direction: column;
  align-items: flex-start;
  background-color:#151515;
  color:white;
}

.session-form-btn{
  background-color:#e72ebe;
  color:white;
  font-family: 'Ropa Sans', sans-serif;
  min-width:120px;
  padding:0 48px;
  height:48px;
  border:none;
  border-radius:4px;
  font-size:14.5px;
  margin-top:42px;
  letter-spacing: 0.65px;
}

.session-form-btn:hover{
  background-color:#ff57e4;
  cursor:pointer;
}

.sessionlink{
  color:#e72ebe;
  text-decoration:none;
  cursor:pointer;
}

.sessionlink:hover{
  color:#ff57e4;
}

.input-field{
  background-color:	#414142;
  padding: 15px 20px;
  border-radius:4px;
  border: 1px solid transparent;
  color:white;
  width:370px;
  margin: 10px 0;
  transition: all .1s ease-out
}

.input-field:hover{
  background-color:#6e6d6e;
  border:1px solid grey;
}
.input-field:focus{
  outline: none !important;
  background-color:#6e6d6e;
  border:1px solid #e72ebe;
}

.login-form-wrapper{
  margin-left: 52px;
}

.login-form label{
  line-height:20px;
}

.login-form-wrapper h2{
    font-size: 28px;
    letter-spacing: 0.4px;
    font-weight: 500;
    line-height: 30px;
    margin: 26px 0 24px;
}
.demo-btn{
  border:none;
}
.splash{
  width:100%;
  height:95%;
  background-image:url('<%= asset_path("splash.gif") %>');
  background-size:cover;
}

.splash-title{
  position:absolute;
  font-size:120px;
  top:25%;
  left:30%;
}
.navbar{
  display:flex;
  justify-content: space-between;
  margin: 0 100px;
}
.navlinks a{
  color:white;
  padding:30px;
}
.navlinks {
  margin-top:25px;
  font-size:16px;
  font-weight:500;
}
